@model NotRealCoverWeb.Models.FacturaVentum

@{
    ViewData["Title"] = "Edit";
}

<h1>Editar</h1>

<h4>FacturaVenta</h4>

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="Id" />

    <div class="form-group row">
        <div class="col-md-3">
            <label asp-for="FechaVenta" class="control-label">Fecha de Venta</label>
            <input asp-for="FechaVenta" class="form-control" />
            <span asp-validation-for="FechaVenta" class="text-danger"></span>
        </div>
        <div class="col-md-3">
            <label asp-for="Correlativo" class="control-label">Correlativo</label>
            <input asp-for="Correlativo" class="form-control" />
            <span asp-validation-for="Correlativo" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        <div class="col-md-6">
            <label asp-for="Cliente" class="control-label">Cliente</label>
            <input asp-for="Cliente" class="form-control" />
            <span asp-validation-for="Cliente" class="text-danger"></span>
        </div>
        <div class="col-md-2">
            <label asp-for="TotalVenta" class="control-label">Total Venta</label>
            <input readonly asp-for="TotalVenta" class="form-control" />
            <span asp-validation-for="TotalVenta" class="text-danger"></span>
        </div>
    </div>

    <div class="form-group row">
        @await Html.PartialAsync("_DetFacturaVentas", Model.DetFacturaVenta)
    </div>

    <div class="form-group">
        <input type="submit" value="Modificar" class="btn btn-primary" />
        <a class="btn btn-secondary" asp-action="Index">Cancelar</a>
    </div>
</form>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
