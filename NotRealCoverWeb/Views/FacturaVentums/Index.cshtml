@model IEnumerable<NotRealCoverWeb.Models.FacturaVentum>

@{
    ViewData["Title"] = "Index";
}

<div style="text-align: center;">
    <h1>NotRealCoverWEB</h1>
</div>

<style>
    .full-width-button {
        width: 100%;
        text-align: center;
    }

        .full-width-button .btn {
            width: 100%;
        }
</style>

<p class="full-width-button">
    <a asp-action="Create" class="btn btn-primary">Crear Nuevo</a>
</p>

<div class="table-responsive">
    <table class="table table-striped">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Cliente)</th>
                <th>@Html.DisplayNameFor(model => model.Correlativo)</th>
                <th>@Html.DisplayNameFor(model => model.FechaVenta)</th>                          
                <th>@Html.DisplayNameFor(model => model.TotalVenta)</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Cliente)</td>
                    <td>@Html.DisplayFor(modelItem => item.Correlativo)</td>
                    <td>@Html.DisplayFor(modelItem => item.FechaVenta)</td>
                    <td>@Html.DisplayFor(modelItem => item.TotalVenta)</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
