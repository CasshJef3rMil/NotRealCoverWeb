@model NotRealCoverWeb.Models.FacturaVentum

@{
    ViewData["Title"] = "Details";
}

<style>
    /* Estilos personalizados */
    .details-container {
        background-color: #f9f9f9;
        border-radius: 8px;
        padding: 20px;
        margin-top: 20px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    }

    .details-title {
        font-size: 24px;
        color: #333;
        margin-bottom: 20px;
    }

    .details-item {
        margin-bottom: 10px;
    }

    .details-label {
        font-weight: bold;
        color: #555;
    }

    .details-value {
        color: #333;
    }

    .btn-container {
        margin-top: 20px;
    }

    /* Estilos para la vista parcial */
    .partial-view {
        margin-top: 20px;
    }
</style>

<h1>Details</h1>

<div class="details-container">
    <h4 class="details-title">Detalles de la Factura</h4>
    <hr />
    <div class="details-item">
        <span class="details-label">Fecha de Venta:</span>
        <span class="details-value">@Model.FechaVenta</span>
    </div>
    <div class="details-item">
        <span class="details-label">Correlativo:</span>
        <span class="details-value">@Model.Correlativo</span>
    </div>
    <div class="details-item">
        <span class="details-label">Cliente:</span>
        <span class="details-value">@Model.Cliente</span>
    </div>
    <div class="details-item">
        <span class="details-label">Total de Venta:</span>
        <span class="details-value">@Model.TotalVenta</span>
    </div>
</div>

<div class="partial-view">
    @await Html.PartialAsync("_DetFacturaVentas", Model.DetFacturaVenta)
</div>

<div class="btn-container">
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model?.Id">Editar</a>
    <a class="btn btn-secondary" asp-action="Index">Volver a la Lista</a>
</div>
